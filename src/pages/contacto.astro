---
import Base from "../layouts/Base.astro";
import "../styles/global.css";
---

<Base title="Contacto — Tecnología TTF" description="Contanos tu necesidad; armamos un plan y un MVP claro.">
  <section class="py-28">
    <div class="mx-auto max-w-[88rem] px-4">
      <div class="text-center">
        <div class="tracking-[.18em] uppercase text-[var(--color-ttf-accent)] text-xs mb-2">Contacto</div>
        <h1 class="font-extrabold leading-tight text-[clamp(1.875rem,1.6vw+1rem,2.5rem)]">Hablemos</h1>
        <p class="mt-2 text-neutral-300 text-[clamp(1.05rem,.5vw+.9rem,1.25rem)]">Contanos tu necesidad y armamos un plan con impacto real.</p>
      </div>

      <div class="mt-12 grid lg:grid-cols-3 gap-8">
        <!-- Form -->
        <form class="lg:col-span-2 grid gap-4 max-w-2xl"
              aria-label="Formulario de contacto">
          <label class="sr-only" for="name">Nombre</label>
          <input id="name" name="name" required
                 class="rounded-lg bg-neutral-900/70 px-4 py-3 ring-1 ring-white/10 focus:ring-2 focus:ring-violet-500 outline-none"
                 placeholder="Tu nombre" />

          <label class="sr-only" for="email">Email</label>
          <input id="email" name="email" type="email" required
                 class="rounded-lg bg-neutral-900/70 px-4 py-3 ring-1 ring-white/10 focus:ring-2 focus:ring-violet-500 outline-none"
                 placeholder="Email" />

          <label class="sr-only" for="phone">Teléfono</label>
          <input id="phone" name="phone" type="tel"
                 class="rounded-lg bg-neutral-900/70 px-4 py-3 ring-1 ring-white/10 focus:ring-2 focus:ring-violet-500 outline-none"
                 placeholder="Teléfono (opcional)" />

          <label class="sr-only" for="message">Mensaje</label>
          <textarea id="message" name="message" required
                    class="min-h-36 rounded-lg bg-neutral-900/70 px-4 py-3 ring-1 ring-white/10 focus:ring-2 focus:ring-violet-500 outline-none"
                    placeholder="Contanos tu proyecto, problema u objetivo…"></textarea>

          <button type="submit"
                  class="justify-self-start rounded-lg px-6 py-3 font-bold bg-violet-500 hover:bg-violet-400 text-black
                         focus:outline-none focus-visible:ring-2 focus-visible:ring-violet-400 transition-colors">
            Enviar
          </button>

          <p class="text-sm text-neutral-400 mt-1">
            o escribinos por <a class="underline hover:text-white" href="https://wa.me/XXXXXXXXXXX" target="_blank" rel="noreferrer">WhatsApp</a>
          </p>
        </form>

        <!-- Datos de contacto -->
        <div class="space-y-4">
          <div class="rounded-2xl p-6 ring-1 ring-white/10 bg-gradient-to-b from-[#17171f] to-[#0f0f15]">
            <div class="font-semibold">Email</div>
            <p class="text-neutral-300">hola@turingtech.ttf</p>
          </div>
          <div class="rounded-2xl p-6 ring-1 ring-white/10 bg-gradient-to-b from-[#17171f] to-[#0f0f15]">
            <div class="font-semibold">WhatsApp</div>
            <a class="text-[var(--color-ttf-accent)] hover:text-white" href="https://wa.me/XXXXXXXXXXX" target="_blank" rel="noreferrer">+54 9 …</a>
          </div>
          <div class="rounded-2xl p-6 ring-1 ring-white/10 bg-gradient-to-b from-[#17171f] to-[#0f0f15]">
            <div class="font-semibold">Redes</div>
            <div class="flex gap-4 mt-2">
              <a class="hover:text-white" href="https://www.instagram.com/turingtech_2025" target="_blank">Instagram Tech</a>
              <a class="hover:text-white" href="https://www.instagram.com/turing_tothefuture" target="_blank">TTF</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
