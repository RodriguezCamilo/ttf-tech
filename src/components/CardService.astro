---
const { icon = '⚙️', title, desc, href = '/servicios' } = Astro.props as {
  icon?: string; title: string; desc: string; href?: string
}
---
<a href={href} class="block rounded-xl bg-neutral-900 p-5 ring-1 ring-white/10 hover:ring-violet-500/40 transition">
  <div class="text-2xl">{icon}</div>
  <h3 class="mt-3 font-semibold">{title}</h3>
  <p class="mt-2 text-sm text-neutral-300">{desc}</p>
</a>
