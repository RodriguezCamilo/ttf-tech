---
const { name, role, img = '/favicon.svg', linkedin, instagram } = Astro.props as {
  name: string; role: string; img?: string; linkedin?: string; instagram?: string
}
---
<div class="rounded-xl bg-neutral-900 p-5 ring-1 ring-white/10">
  <img src={img} alt={name} class="h-16 w-16 rounded-full ring-1 ring-white/10" />
  <h3 class="mt-3 font-semibold">{name}</h3>
  <p class="text-sm text-neutral-300">{role}</p>
  <div class="mt-3 flex gap-3 text-sm">
    {linkedin && <a href={linkedin} target="_blank" rel="noreferrer" class="hover:text-white">LinkedIn</a>}
    {instagram && <a href={instagram} target="_blank" rel="noreferrer" class="hover:text-white">Instagram</a>}
  </div>
</div>
